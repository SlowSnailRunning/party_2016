    <sql id="Base_Column_List">
        id,
        `state`,
        `type`,
        intro,
        option_a,
        option_b,
        option_c,
        option_d,
        `result`,
        correct,
        selected
    </sql>
    <sql id="queryQueWhere">
        <if test="intro!=null and intro!=''">
            and intro like '%${intro}%'
        </if>
        <if test="type!=null and type!=''">
            and `type`=#{type}
        </if>
    </sql>
